    private javax.swing.JPanel jPanel1;
    private javax.swing.JPanel jPanel2;
    private javax.swing.JFormattedTextField jTexto_CNPJ;
    private javax.swing.JTextField jTexto_Nome;
    // End of variables declaration                   

    public void habilita() {
        jBotao_Salvar.setEnabled(true);
        jTexto_CNPJ.setEnabled(true);
        jTexto_Nome.setEnabled(true);
    }
    
    public void limpa() {
        jTexto_CNPJ.setText("");
        jTexto_Nome.setText("");
    }
    
    public void desabilita() {
        jTexto_CNPJ.setEnabled(false);
        jTexto_Nome.setEnabled(false);
    }
}
