    private void jBotao_NovoActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        habilita();
    }                                           

    private void jBotao_SalvarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        Entidade entidade = new Entidade();
        entidade.setNome_entidade(jTexto_Nome.getText().trim());
        entidade.setCnpj_entidade(jTexto_CNPJ.getText());
        if(entidadeDao.salvar(entidade))
            JOptionPane.showMessageDialog(null, "Cadastro realizado com sucesso!");
        else
            JOptionPane.showMessageDialog(null, "Erro Interno");
        limpa();
    }                                             


    // Variables declaration - do not modify                     
    private javax.swing.JButton jBotao_Novo;
