    public void habilita() {
        jBotao_Salvar.setEnabled(true);
        jTexto_CPF.setEnabled(true);
        jTexto_Nome.setEnabled(true);
        jTexto_Senha.setEnabled(true);
        jTexto_Login.setEnabled(true);
        jTexto_Telefone.setEnabled(true);
        jTextoDataNascimento.setEnabled(true);
        jRadio_Admin.setEnabled(true);
        jRadio_Usuario.setEnabled(true);
    }
    
    public void limpa() {
        jTexto_CPF.setText("");
        jTexto_Nome.setText("");
        jTexto_Senha.setText("");
        jTexto_Login.setText("");
        jTexto_Telefone.setText("");
    }
    
    public void desabilita() {
        jTexto_CPF.setEnabled(false);
        jTexto_Nome.setEnabled(false);
        jTexto_Senha.setEnabled(false);
        jTexto_Login.setEnabled(false);
        jBotao_Salvar.setEnabled(false);
        jTexto_Telefone.setEnabled(false);
        jTextoDataNascimento.setEnabled(false);
        jRadio_Admin.setEnabled(false);
        jRadio_Usuario.setEnabled(false);
    }
    
}
